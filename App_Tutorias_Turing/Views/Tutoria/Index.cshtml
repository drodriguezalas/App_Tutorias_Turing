@model List<App_Tutorias_Turing.Models.Tutoria>

@{
    ViewData["Title"] = "Tutorías Disponibles";
}

<h1>Tutorías Disponibles</h1>

<table class="table">
    <thead>
        <tr>
            <th>Descripción</th>
            <th>URL</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tutoria in Model)
        {
            <tr>
                <td>@tutoria.Descripcion</td>
                <td><a href="@tutoria.Url" target="_blank">@tutoria.Url</a></td>
                <td>
                    <button class="btn btn-primary" onclick="confirmarMatricula(@tutoria.Id)">Matricular</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        function confirmarMatricula(tutoriaId) {
            var usuarioId = 1; // Cambia esto por la lógica para obtener el ID del usuario actual

            $.post('@Url.Action("VerificarMatricula", "Tutoria")', { usuarioId: usuarioId, tutoriaId: tutoriaId }, function (data) {
                if (data.success) {
                    $.post('@Url.Action("ConfirmarMatricula", "Tutoria")', { usuarioId: usuarioId, tutoriaId: tutoriaId }, function (confirmData) {
                        alert(confirmData.message);
                    });
                } else {
                    alert(data.message);
                }
            });
        }
    </script>
}
